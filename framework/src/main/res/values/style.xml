<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- MAIN TAB BAR INDICATOR -->

    <style name="tabIndicator">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_margin">0sp</item>
    </style>

    <style name="simpleTab">
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="simpleTab.centerLeft">
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="simpleTab.centerRight">
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:layout_centerInParent">false</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:scaleGravity">center_vertical|right</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:gravity">right</item>
    </style>
</resources>